{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    // Ensure Metro recognizes absolute imports starting with "@/"
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "exclude": [
    "supabase/functions/**"
  ]
}
